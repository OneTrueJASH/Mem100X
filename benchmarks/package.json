{
  "name": "mcp-benchmark-suite",
  "version": "1.0.0",
  "description": "Fair and reproducible benchmarking suite for MCP memory servers",
  "scripts": {
    "build": "tsc",
    "benchmark": "node dist/runner.js",
    "benchmark:mem100x": "SERVERS=mem100x node dist/runner.js",
    "benchmark:official": "SERVERS=official-memory node dist/runner.js",
    "benchmark:all": "node dist/runner.js",
    "compare": "node scripts/compare-results.js",
    "docker:build": "docker-compose build",
    "docker:run": "docker-compose run benchmark"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.13.3",
    "dockerode": "^4.0.2",
    "microtime": "^3.1.1",
    "simple-statistics": "^7.8.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "cli-table3": "^0.6.3",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/dockerode": "^3.3.23",
    "@types/microtime": "^2.1.2",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}
