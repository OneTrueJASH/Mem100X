{
  "name": "realistic-workflow",
  "description": "Simulates real user interaction patterns with the memory server",
  "concurrency": 3,
  "iterations": 50,
  "warmupIterations": 5,
  "operations": [
    {
      "type": "search_nodes",
      "weight": 25,
      "params": {
        "query": "knowledge graph memory {{index}}"
      }
    },
    {
      "type": "create_entities",
      "weight": 20,
      "params": {
        "entities": [
          {
            "name": "user-session-{{timestamp}}-{{index}}",
            "entityType": "session",
            "observations": [
              { "type": "text", "text": "User interaction at step {{index}}" },
              { "type": "text", "text": "Context from previous search" }
            ]
          }
        ]
      }
    },
    {
      "type": "add_observations",
      "weight": 30,
      "params": {
        "observations": [
          {
            "entityName": "user-session-{{timestamp}}-1",
            "contents": [
              { "type": "text", "text": "Follow-up thought at step {{index}}" },
              { "type": "text", "text": "Additional context from interaction" }
            ]
          }
        ]
      }
    },
    {
      "type": "create_relations",
      "weight": 15,
      "params": {
        "relations": [
          {
            "from": "user-session-{{timestamp}}-1",
            "to": "user-session-{{timestamp}}-2",
            "relationType": "follows_from"
          }
        ]
      }
    },
    {
      "type": "read_graph",
      "weight": 10,
      "params": {}
    }
  ]
}
